t=nil
cl=0

function lerp(a,b,t)
 return a+(b-a)*t
end

function _update()
 if btnp(🅾️) then
  t=nil
 end
 if btnp(❎) then
  t=0
 end
 if t==nil then
  cl=rnd(16)+8
  for i=0,32,1 do
   poke(0x3200+i,0)
  end
   
  local old=rnd(12)+50
  for i=0,cl,4 do
   local new=rnd(12)+50
   for j=0,3 do
    poke(0x3200+i+j,lerp(old,new,j/4))
   end
   old=new
  end
  t=0
 end
 if t==0 then
  sfx(0)
 end
 if t<=cl then
  t+=1
 end
end

function _draw()
 cls(0)
 print(t)
 for i=0,cl,1 do
  local pitch=peek(0x3200+i)
  local x=(i*3)+2
  local c=14
  if i==stat(20) then
   c=7
  end
  line(x,96,x,96-pitch,c)
 end
end
